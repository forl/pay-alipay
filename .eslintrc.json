{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "linebreak-style": [
      "error", "unix"
    ],
    "quotes": [
      "error", "single"
    ],
    "semi": ["error", "always"],
    "no-console": 0,
    "no-plusplus": 0,
    "func-names": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-await-in-loop": 0,
    "import/no-dynamic-require": 0
  }
}